{{!< default}}
{{!--
******* PS *********
To use your own about me, first create a post, then in the 'post settings' (the gear icon),
check 'Turn this post into a static page', and in the 'Post URL' field, put 'about' in it.
Then just write this post and publish it.
--}}
{{#post}}
<main class="container" >
    <div class="row animated fadeInUp zh-aboutme">
        <div class="col s12">
            <div class="card hoverable">
                
                {{! spacing}}
                <div class="row"></div>
                
                <div class="center-align">
                    <article class="{{post_class}}">
                        <header class="">
                            <img src="{{> shared_favicon}}" alt="" class="circle hoverable">
                            <h5 class="valign">{{title}}</h5>
                        </header>
                    <section class="valign container left-align">
                        {{content}}
                    </section>
                    </article>
                </div>
                
                {{! spacing}}
                <div class="row"></div>
                <div class="row"></div>
                <div class="row"></div>
            </div>
        </div>
    </div>
</main>
{{/post}}
